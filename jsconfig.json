{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*" : ["./*"],
      "common/*": ["./src/common/*"],
      "client/*": ["./src/client/*"],
      "~/components/common/*": ["./src/client/components/Common/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "app"
  ]
}
