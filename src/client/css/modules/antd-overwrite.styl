.ant-form-item-label label
  font-size 13px
  font-weight bold
  color rgba(0, 0, 0, 0.65)

.ant-spin-dot:before, .ant-spin-dot:after
  background-color #1ab394

.ant-select-selection__placeholder, .ant-select-selection-selected-value
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

.ant-select-selection__placeholder
  right 18px

.ant-table .ant-table-thead > tr > th
  background #f3f3f5

.ant-table .ant-table-tbody > tr:nth-child(even)
  background #f9f9f9

.ant-table-bordered .ant-table-thead > tr > th, .ant-table-bordered .ant-table-tbody > tr > td
  border-color #dcdbe0

.ant-table-thead > tr.ant-table-row-hover > td, .ant-table-tbody > tr.ant-table-row-hover > td, .ant-table-thead > tr:hover > td, .ant-table-tbody > tr:hover > td
    background #e7e8ec

.ant-radio-button-wrapper
  line-height: 30px
  height 32px
.ant-radio-button-wrapper-checked
  background colorMain
  border-color colorMain
  color #fff

  &:first-child
    border-color colorMain
  &:hover
    color #fff

.ant-table-small .ant-table-header > table, .ant-table-small .ant-table-body > table
  padding 0

.ant-btn-primary
  background-color colorMain
  border-color colorMain
  &:hover
  &:focus
  &:active
    color #fff
    background-color #6365d8
    border-color #6365d8

.ant-btn-ghost:hover, .ant-btn-ghost:focus
  color #504762
  background-color transparent
  border-color #504762

.ant-table tr.ant-table-row-hover, .ant-table tr:hover
  background #f3f3f3

.ant-select-dropdown.is-fetching
  height 34px
  overflow hidden

  &:after
    content '加载中...'
    position absolute
    left 0
    top 0
    width 100%
    height 34px
    line-height 34px
    padding 0 10px
    background #fff
    color #666

.ant-select-open .ant-select-selection
  box-shadow 0 0 0 2px rgba(154, 118, 171, 0.2)

.ant-message
  padding-top 24px
  .ant-message-notice
    &:first-child
      margin-top 0
      
.ant-message-notice-content
  border-radius 0 0 4px 4px

.ant-tooltip
  .ant-tooltip-inner
    max-width 350px

.ant-message-success .anticon
  color colorGreen

.ant-checkbox-checked .ant-checkbox-inner
  border-color colorMain
  background colorMain

.ant-radio-checked .ant-radio-inner
  border-color colorMain
  &:after
    background colorMain


/* use css to set position of modal */
.vertical-center-modal
  text-align center
  //white-space nowrap

.vertical-center-modal:before
  content ''
  display inline-block
  height 100%
  vertical-align middle
  width 0

.vertical-center-modal .ant-modal
  display inline-block
  vertical-align middle
  top 0
  text-align left

.no-body-padding-modal .ant-modal .ant-modal-body
  padding 0


.hide-modal-footer-line .ant-modal-footer
  border-top none


// 隐藏页码按钮，但不隐藏 total 提示
.hide-pagination
  .ant-pagination
    li
      display none
      &.ant-pagination-total-text
        display inline-block

#table-transfer .hide-pagination
  .ant-pagination
    li
      display inline-block
      &.ant-pagination-total-text
        display inline-block
