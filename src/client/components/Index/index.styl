.system-index
  position relative
  width 100%
  height 100%
  background-color #f5f5fd
  background-image url(/_bc/sugo-analytics-static/assets/images/system-index/bg.jpg)
  background-repeat no-repeat
  background-position center 
  background-attachment fixed
  background-size contain
  display flex
  justify-content space-around
  align-items center

  // ================ 动图 start ==================
  .animation
    width 870px
    min-width 870px
    height 400px
    position relative

    .base
      width 100%
      height 100% 
    
    .collect
      position absolute
      top 155px
      left 80px
      width 250px
    
    .develop
      position absolute
      top 3px
      left -22px
      width 250px
    
    .asset
      position absolute
      top -111px
      left 150px
      width 245px

    .service
      position absolute
      right 152px
      top -80px
      width 250px
    
    .market
      position absolute
      top 70px
      right 40px
      width 250px

    .operate
      position absolute
      top -80px
      right -18px
      width 250px
    
    .manager
      position absolute
      top -29px
      left 260px
      width 300px
      z-index 9

    .mask
      position absolute
      width 85px
      height 50px
      z-index 99

    .collect-mask
      top 187px
      left 144px

    .develop-mask
      top 52px
      left 47px

    .asset-mask
      top -56px
      left 230px

    .service-mask
      top -56px
      left 542px

    .market-mask
      top 115px
      left 662px

    .operate-mask
      top -26px
      left 721px

    .manager-mask
      width 100px
      height 60px
      top -10px
      left 360px

    .box1
      width 15px
      position absolute
      animation collectToDevelop 5s linear infinite 
      -webkit-animation collectToDevelop 5s linear infinite 

    .box2
      width 15px
      position absolute
      animation developToAsset 2s linear infinite 
      -webkit-animation developToAsset 2s linear infinite 

    .box3
      width 15px
      position absolute
      animation assetToService 5s linear infinite 
      -webkit-animation assetToService 5s linear infinite 

    @keyframes collectToDevelop
      0% 
        bottom 96px
        left 154px 
      70%
        bottom 176px
        left 14px
      100%
        bottom 210px
        left 74px

    @-webkit-keyframes collectToDevelop
      0% 
        bottom 96px
        left 154px 
      70%
        bottom 176px
        left 14px
      100%
        bottom 210px
        left 74px

    @keyframes developToAsset
      0% 
        top 130px
        left 154px
      100%
        top 87px
        left 227px

    @-webkit-keyframes developToAsset 
      0% 
        top 130px
        left 154px
      100%
        top 87px
        left 227px     


    @keyframes assetToService
      0% 
        top 40px
        left 315px
      40%
        top -1px
        left 385px
      100%
        top 74px
        left 520px

    @-webkit-keyframes assetToService
      0% 
        top 40px
        left 315px
      40%
        top -1px
        left 385px
      100%
        top 74px
        left 520px

  // ================ 动图 end ==================

  // ================ 视频教程/新手入门 start ==================
  .right-box
    width 450px
    display flex
    flex-direction column
    justify-content center

    .shadow
      background #fafafc
      box-shadow 0px 20px 40px 0px rgba(140,140,158,0.2)
      border-radius 5px
      padding 15px
      margin-bottom 20px

    .title
      color #333333
      font-weight 700
      margin-bottom 10px

      &::before
        display inline-block
        content ''
        width 4px
        height 16px
        background-color #6969d7
        vertical-align text-bottom
        border-radius 4px
        margin-right 5px

    .introduce
      a.link
        display block
        color #666666
        margin-bottom 10px
        margin-left 20px
        &:hover
          color #6969d7

      .ant-tabs-bar
        border-bottom none !important

      .ant-tabs-tab
        border 1px solid #e0e0e0
        border-radius 30px
        padding 5px 10px
        margin-bottom 2px
        margin-right 8px

      .ant-tabs-tab-active
        border 1px solid
        border-radius 30px
        padding 5px 10px
        background-color #f0f0ff
        color #6969d7

      .ant-tabs-ink-bar-animated
        display none !important

      .ant-pagination
        margin-top 20px
        margin-left 15px
      
      .ant-pagination-item
        border-radius 50%

      .ant-pagination-item-active
        background-color #f0f0ff
  // ================ 视频教程/新手入门 end ==================
