body
  overflow hidden

#container .contain
  height 100%
  width 100%
  min-width 0
  min-height 0
#livescreen-control-tabs 
  // position fixed
  .ant-tabs-bar 
    margin 0
  .ant-card-head-title
    padding 0
  .ant-card-head
    min-height 0
  .ant-tabs-content
    height calc(100% - 45px)
// #main-header
