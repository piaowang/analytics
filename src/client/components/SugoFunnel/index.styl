.sugoFunnels
  height 100%
  .disabled
    color #d1d2d5
  
  .editor-buttons
    position relative
    z-index 10

  .options
    background #fff

  .panelHeader
    line-height 25px
    border-bottom #a0a0a0 1px solid
    padding-bottom 15px

  .headerText
    line-height 2.4em
    text-align center
  .headerRight
    float right
    button
      float right

  .cancelComparing
    position absolute
    color #999
    right 10px
    top 10px
    cursor pointer
    &hover
      color red

  .ant-select-disabled .ant-select-selection--multiple .ant-select-selection__choice,
  .ant-input-number-input[disabled],
  .ant-input[disabled], fieldset[disabled] .ant-input, .ant-select-disabled
    color #777
    .ant-select-selection
      border none
      background none
      cursor auto
    .ant-select-arrow
      display none

.funnel-card
  background #fff
  border-radius 3px
  border 1px solid #eee
  
.comparableFunnelPanel
  padding-top 16px
  padding-bottom 16px
  .step-button
    color #fff
    background-color #aaa
    border-color  #aaa
  .step-button.active
    color white
    background-color #5cb85c
    border-color  #5cb85c

.float-item
  margin-top 8px
  
.funnel-percent
  height 40px
  line-height 40px
  overflow hidden
  position relative

  .step-text
    position absolute
    left 50%
    margin-left -80px
    top 0px
    width 160px
    display block
    text-align center

  .step-arrow
    height 0
    cursor pointer
    width 160px
    margin 0 auto
    border-top 100px solid #aaa
    color #fff
    border-left 60px solid transparent
    border-right 60px solid transparent
    &.active
      border-top 100px solid #5cb85c
      color #fff

.funnel-bubble-box
  position relative
  padding 0px 5px
  line-height 30px
  border 1px solid #eee
  border-radius 3px
  //box-shadow 2px 2px 10px #bbb
  &.editing
    line-height 45px

.last .funnel-bubble-box
  &after, &before
    display none

.funnelLayerValue
  width auto
  text-align center
  

.funnelViz
  .ant-progress-inner, .ant-progress-bg
    border-radius 3px

.comparableFunnelPanel.comparing-left
  .ant-progress-bg
    background-color #1bb39c

.comparableFunnelPanel.comparing-right
  .ant-progress-bg
    background-color #1bb39c

