#container
  height 100%
.v-body-box
  display flex
  flex-direction: column
  height 100%
  overflow hidden
  justify-content: space-around;
  .v-header
    flex-shrink: 0
    height 50px
    border-bottom: 1px solid #ddd
    .v-logo
      height 100%
      display: flex
      align-items: center
      margin-left: 20px
      img
        height 30px
.v-body-main
  width: 100%
  flex-grow: 1
  display: flex
  background: #e4eaef
  overflow: hidden;
  .v-main
    width: 100%
    height 100%
    display flex
    flex-direction: column
  .v-m-view
    width: 100%
    height 100%
    flex-grow: 1
    position relative
  .v-tab-box
    height 40px
    background: #fff
    border-bottom: 1px solid #dddddd
    flex-shrink: 0
    display: flex
    align-items: center
    position relative
    .ctr-box
      position absolute
      top 10px;
      right 15px;
      color: rgb(105, 105, 215)
      font-size: 20px
      cursor pointer
      z-index: 22
    .ant-tag
      height 100%
      border-radius: 0
      display flex
      align-items: center
      border: none;
      margin-right: 0;
      border-right: 1px solid #ddd;
      padding:0 10px
  .ant-empty
    margin-top: 150px
.r-left-box 
  flex-shrink: 0
  width: 180px
  background: #3a404e
  overflow-y: auto
  transition: all .3s
.v-l-box
  width: 100%
  padding-bottom: 20px
  .item
    height 40px
    line-height: 40px
    padding:0 20px
    color: #fff
    cursor pointer
    position relative
    white-space nowrap
    overflow:hidden
    text-overflow: ellipsis
    &:before
      content: ''
      position absolute
      top 0
      left 0
      width 4px
      display none
      height 100%
      background:#6969d7
    &:hover
      background: #292f3f
    &.on
      background: #51576d
      &:before
        display block
.if-box
  width: 100%
  height 100%
  border: none

.report-display-scrollbar
  &::-webkit-scrollbar
    width 7px
    height 0
  &::-webkit-scrollbar-thumb
    border-radius 7px
    background-color rgba(0, 0, 0, .3)

  


