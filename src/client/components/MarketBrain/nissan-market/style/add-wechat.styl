#container
  background-color #f5f5f9
  overflow scroll
#add-wechat
  width: 90%;
  margin: 0.2rem;
  background-color: #fff;
  position: relative;
  padding-bottom: 1.8rem;
  padding-top: 0.6rem;

  .img
    width 1rem
    height 1rem
    margin 0 auto
    background-color #6C6F75
    border-radius 50%
    position relative
    top -.3rem

  .info
    text-align center

    .name
      font-size 16px
      color #212121
      font-weight bold
      margin-bottom .06rem

    .desc
      color #6C6F75
      margin-bottom 0

  .qrcode
    width 90%
    border-top 1px solid #f5f5f9
    border-bottom 1px solid #f5f5f9
    margin: .8rem 0.1rem 0;
    text-align: center;
    padding: 0.2rem 0;

    img
      width 100%

    p
      margin-top: .5em;
      margin-bottom: 0;
      color #6C6F75

@media screen and (min-width: 600px)
  #add-wechat
    padding-bottom .2rem

    .qrcode
      width 90%
      margin .3rem .1rem 0