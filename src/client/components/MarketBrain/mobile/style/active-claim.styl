$active-claim-background-path = "../../../../../../node_modules/sugo-analytics-static/assets/images/market-brain-h5/active-claim-header.png"
$active-claim-art-word-path= "../../../../../../../node_modules/sugo-analytics-static/assets/images/market-brain-h5/active-claim-header-word.png"
#container
  height 100%

#market-brain
  height 100%
  width 100%
  //活动认领
  #market-brain-active-claim
    height 100%
    .outer
      height calc(100% - 0.65rem)
      overflow scroll
      background-image linear-gradient(to bottom, rgba(255, 188, 63, 1) 55%, rgba(225, 90, 130, 1))
    .header
      width 100%
      height 1.4rem
      background-image url($active-claim-background-path)
      background-repeat no-repeat
      background-size contain
      padding-top .44rem
    .body
      .ul
        margin-top .24rem
        .task-item
          background-color #ffffff
          width 3.35rem
          height 1.28rem
          border-radius .08rem
          margin .08rem auto
          padding .18rem .15rem
          .task-item-left
            width 2.1rem
            float left
            .item-header
              font-size 14px
              color #202020
              font-weight 400
              height 16px
              line-height 16px
            .item-header-icon
              display inline-block
              vertical-align top
              width .04rem
              height .14rem
              border-radius 2px
              background-image linear-gradient(to bottom, rgba(241, 69, 50, 1), rgba(255, 188, 63, 1))
            .remain
              margin-top .18rem
              font-size 16px
              height 18px
              line-height 18px
              color #DF2634
              font-weight 600 
            .total
              color #999999
              font-size 12px
              margin-top .1rem
              height 14px
              line-height 14px
            .execute-at
              color #876367
              font-size 12px
              height 14px
              line-height 14px
              margin-top .04rem
          .task-item-right
            float right
            padding-top .34rem
            .task-item-button
              width .9rem
              height .3rem 
              line-height .3rem
              border-radius .15rem
              font-size 18px
              color #ffffff
              background-image linear-gradient(to right, rgba(241, 69, 50, 1), rgba(255, 188, 63, 1))
              

