}

.project-item  {
  overflow: hidden
  margin: 10px 13px
  background: #fff
  box-shadow: 10px 10px 10px 0 rgba(67,87,101,0.1)
  border-radius: 0.5px
  float: left
  height: 200px
  width: 180px
  border: 1px solid #f0f2f3
 
  &:first-child {
     border: 2px dashed #b2c1d5
  }

  & > .new-link {
      display block
      padding: 23px 0 0 0
      font-size: 16px
      text-decoration: none
      color: #7f93ae

      & > span {
        display block
        text-align: center
      }
  }

  .project-title {
    margin: 0
    font-size: 16px
    text-decoration: none
    color: #7f93ae
    border-bottom: 1px dashed #f0f2f3
  }

  .main {
    height: 165px
    display: flex
    flex-direction: column
    justify-content: space-between
    padding: 5px 0
    color: #7f93ae

    div {
      display: inline-block;
      white-space: nowrap; 
      width: 100%; 
      overflow: hidden;
      text-overflow:ellipsis;
    }

    .op {
      a {
        color: #7f93ae
      }

      a~a {
        margin-left: 8px
      }
    }
  }
}

