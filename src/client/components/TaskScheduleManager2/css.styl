.progress-container
    position relative
    width 100%
    margin 4px
    background-color #f5f5f5
    height 24px
    border-radius 4px
    -webkit-box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.1)
    box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.1)
    .progress-child
      position absolute
      height 24px
      border-radius 4px
    .SUCCEEDED
      background #5cb85c
      border 1px solid #5cb85c
    .KILLING
      background #ff9999
      border 1px solid #ff9999

