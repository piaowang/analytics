
.editable-cell
  position: relative

.editable-cell-text-wrapper
  padding-right: 24px

.editable-cell-text-wrapper
  padding: 5px 24px 5px 5px
  span 
    display inline-block

.editable-cell-text-wrapper .editable-cell-icon
  position: absolute
  right: 0
  width: 20px
  cursor: pointer

.editable-cell-icon
  line-height: 18px
  display: none

.editable-cell-icon-check
  line-height: 28px

tr:hover .editable-cell-icon,
.editable-cell-input-wrapper .editable-cell-icon
  display: inline-block

.editable-add-btn
  margin-bottom: 8px

// 可编辑表格
.editable-table
  padding-top: 20px

.show-edit-icon
  visibility visible

.hide-edit-icon
  visibility hidden
