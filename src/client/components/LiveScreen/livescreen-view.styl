body
  overflow hidden

// 布局区域
.screen-layout
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1
  .-screen-com
    position: absolute!important
    margin: 0!important
  .-screen-wraper > div
    overflow: hidden
  .common-alert
    font-size: 28px !important
    &,i
      color: #ddd !important
  .ant-table
    color: #fff
    border-radius: 0
    // border-color: #00CAEA
    tr,th,td,.ant-table-header,.ant-table-body
      background-color: transparent !important
    .ant-table-thead > tr > th
      color: #fff
    // border-color: #00CAEA
    /*.ant-table-tbody > tr > td
      border-color: #00CAEA*/
  .bigNumberChart
    h1,.metric-name
      color: #fff
    .ant-row
      margin 0 !important
    .ant-col-24
      margin 0 !important


// 覆盖默认的滚动条样式
::-webkit-scrollbar
    // display: none
    background-color: #fff
    &:horizontal
      height: 6px
    &:vertical
      width: 6px

::-webkit-scrollbar-thumb
    border-radius: 4px
    background-color: #656565

// overwrite
.bigNumberChart
  padding 0

@keyframes scrolling{0%{margin-top:0;}10%{margin-top:0;}90%{margin-top:-7vw;}100%{margin-top:-7vw;}}
@font-face 
  font-family 'digital7'; 
  src url('../../images/digital-7-mono.ttf')
.ant-table-body, .ant-table-fixed-header .ant-table-scroll .ant-table-header
  overflow hidden !important

#table-transfer .ant-table-body, .ant-table-fixed-header .ant-table-scroll .ant-table-header
  overflow-x scroll !important
  
.ant-table-row-expand-icon
  display none


