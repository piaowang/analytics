.task-schedule-logger
  .logger-header
    padding 10px 25px
    border 1px solid #ccc
    border-radius 4px
    .task-logger-item
      font-size 12px
      color #333
      padding-left 10px
      white-space nowrap
      span
        font-size 12px
        color #999
        margin-right 10px
    .ant-btn
      color #ffffff
      background-color #6969d7
      height 24px
      font-size 12px
          
  .project-panel
    border 1px solid #ddd
    border-radius 2px
    .load-more
      margin 20px 0
      text-align center

  .logger-table-container
    margin-top 20px
    margin 20
    .logger-table
      .ant-table-body
        table
          padding 0
  .projectlog-box
    max-height 400px
    overflow-y scroll
    padding 0 5px
    background-color #fafafa
    color #666
    p
      margin-bottom 1px

  .progress-container
    position relative
    width 100%
    margin 4px
    background-color #f5f5f5
    height 24px
    border-radius 4px
    -webkit-box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.1)
    box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.1)
    .progress-child
      position absolute
      height 24px
      border-radius 4px
    .SUCCEEDED
      background #5cb85c
      border 1px solid #5cb85c
    .KILLING
      background #ff9999
      border 1px solid #ff9999

  .child-log-box
    max-height 400px
    overflow-y scroll
    padding 0 10px
    p
      margin-bottom 0

  .no-data
    text-align center
    padding 50px 0
