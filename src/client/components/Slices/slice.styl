.slice-card
  float left
  position: relative
  width 300px
  height 408px
  margin 0 15px 15px 0
  border 1px solid #ddd
  border-radius 3px
  background #fff
  box-shadow 0px 3px 10px 0px rgba(13,139,113,.2)
  border-radius 4px
  .fright .pointer
    display none
  .fright .anticon-pushpin, .fright .anticon-star
    display inline-block

  &:hover
    transition all .3s ease-in-out
    box-shadow 0px 4px 10px 0px rgba(45,163,251,0.4)
    .fright .pointer
      display inline-block

.slice-head
  padding 6px 10px
  border-bottom 1px solid #f3f3f3

.slice-date
  color #999
  width 80%
  position absolute
  left -6px
  bottom -14px
  height 20px
  line-height 20px
.slice-body
  position: absolute
  top: 53px
  bottom: 35px
  width 100%
  padding 0 10px

.slice-footer
  position: absolute
  bottom: 0
  left 0
  right 0
  padding 8px 10px
  color #999

