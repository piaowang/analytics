.split {
  width: 100%
  margin-left: -25px
  background-color: #f0f2f5
  height: 12px
}


.project-title {
  margin: 0
  text-decoration: none
  border-bottom: 1px solid  #f0f2f3
}

.description {
  word-break: break-all
  text-overflow: -o-ellipsis-lastline
  overflow: hidden
  text-overflow: ellipsis
  display: -webkit-box
  -webkit-line-clamp: 3
  line-clamp: 3
  -webkit-box-orient: vertical
}

.task-project-wrap {
  display flex
  flex-wrap wrap
  justify-content space-around
  align-items stretch

  & > div {
    min-height 240px
  }
}

.task-project-card {
  display flex
  justify-content space-between
  flex-direction column
}

.task-project-add  {
  overflow: hidden
  background: #fff
  box-shadow: 10px 10px 10px 0 rgba(67,87,101,0.1)
  border-radius: 0.5px
  width: 100%
  border: 1px solid #f0f2f3
  transition: all 0.2s
  display flex
  justify-content center
  align-items center

  &:first-child {
     border: 2px dashed #b2c1d5
  }

  & > .new-link {
      display block
      font-size: 16px
      text-decoration: none
      color: #7f93ae

      & > span {
        display block
        text-align: center
      }
  }
}
