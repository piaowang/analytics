.portal-tree-box
  .ant-tree-switcher
    display: none
  .ant-tree-list
    background: #f4f4f4
  .ant-tree-title
    display: flex
    align-items: center
  .group-box-add
    margin: 15px 0
    display: flex
    align-items: center
    justify-content: center
    font-size: 16px
  .child-add-box
    margin: 15px 0
    display: flex
    align-items: center
    justify-content: center
  .ant-tree 
    .ant-tree-node-content-wrapper
    &.ant-tree-node-selected
      background: none
  .item
    position relative
    margin-left: -10px
    .close-btn
      position absolute
      top: -30px
      right: 1px
  .ant-tree-treenode
    margin-bottom: 20px
    