
.heat-map-list-nav
  border-bottom 1px solid #e4e4e4
  height 58px
  line-height 58px
  font-size 14px
  background #4C4C52
  box-shadow 0 1px 5px #ddd
.heat-map-container
  .heat-map-filter
    width 460px
    margin auto
    padding-top 50px
  .heat-list-item
    border-radius 10px
    .item-title 
      position relative
      margin-top -26px
      height 36px
      background rgba(0,0,0,0.65)
      width 100%
      border-radius 0px 0px 10px 10px
      color #fff
      text-align center
      line-height 36px
    .item-del
      position absolute
      margin-left -10px
      margin-top -3px
  .alert-msg
    margin 50px auto
    font-size 16px
    width 95%
    text-align center
  .event-point-panel
    border 2px solid #40a5ed
    position absolute
    background rgba(125,125,125,0.7)
    &.point-group   
      color #fff
      display flex
      align-items center
      justify-content center
  .event-point 
    position absolute 
    &:hover
      border 2px solid #40a5ed
      background rgba(125,125,125,0.7)
  .display-point-group
    width 120px
  
  .list-item
    text-align center
  .list-img
    width 150px
    height 150px
    margin auto
  .lineh28
    line-height 28px

  .demo-infinite-container 
    border-radius 4px
    overflow auto
    height calc( 100vh - 163px)
  
  .demo-loading-container 
    position absolute
    bottom 40px
    width 100%
    text-align center
    
  